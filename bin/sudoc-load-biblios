#!/usr/bin/perl 

package Main;

use strict;
use warnings;


use FindBin qw( $Bin );
use lib "$Bin/../lib";

use Getopt::Long;
use Pod::Usage;
use Sudoc;
use Sudoc::Loader::Biblios;
use YAML;

my ($help, $doit);
GetOptions(
    'help|h'   => \$help,
    'doit'     => \$doit,
);

my $iln = shift @ARGV;

if ( $help || !$iln ) {
    pod2usage( -verbose => 2 );
    exit;
}

my $sudoc  = Sudoc->new;
$sudoc->iln($iln);
my $files = $sudoc->spool->first_batch_files('waiting', '[a|b]');
if ( @$files ) {
    for my $file (@$files) {
        my $loader = Sudoc::Loader::Biblios->new(
            sudoc => $sudoc,
            file => $file,
            doit => $doit,
        );
        $loader->run();
    }
}

=encoding utf-8

=head1 NOM

sudoc-load-biblios - Chargement des notices bibliographiques

=head1 SYNOPSYS

 sudoc-load-biblios 80
 sudoc-load-biblios 80 --doit

=head1 DESCRIPTION

Cherche les fichier d'autorités à charger dans le répertoire :

  SUDOC_ROOT/var/spool/waiting

=head1 PARAMETRES

=over

=item --help, -h

Affiche cette page d'aide

=back


